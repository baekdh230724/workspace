#오라클 DB 연결 정보
spring.datasource.hikari.driver-class-name=oracle.jdbc.driver.OracleDriver
spring.datasource.hikari.jdbc-url=jdbc:oracle:thin:@IP주소:포트번호:DB이름
spring.datasource.hikari.username=계정명
spring.datasource.hikari.password=비밀번호

# HikariCP Connection Pool Properties
#풀이 연결을 사용할 수 있을 때까지 대기하는 최대 시간(ms)을 지정
spring.datasource.hikari.connection-timeout=30000

#풀의 최대 연결 수 설정
spring.datasource.hikari.maximum-pool-size=5

#연결이 풀에서 유휴 상태로 있을 수 있는 최대 시간(ms)을 지정
spring.datasource.hikari.idle-timeout=600000

#연결 풀의 이름을 지정
spring.datasource.hikari.pool-name=MyHikariCP

#자동 커밋 끄기
spring.datasource.hikari.auto-commit=false

#이메일 인증
spring.mail.username=이메일
spring.mail.password=발급받은 앱 비밀번호



#나만의 파일 저장 경로 지정(절대 경로만 가능!)


# connect path : 웹 요청 경로
#(어떤 웹 요청 경로로 요청이 왔을 때 프로젝트 외부 폴더와 연결할 것인가)
my.images.connectpath=웹 요청 경로

# resource path : 자원이 저장된 프로젝트 외부 폴더 경로
my.images.resourcepath=file:///서버 컴퓨터 폴더 경로



#회원(프로필이미지) 저장 경로
my.member.location=서버 컴퓨터 폴더 경로
my.member.webpath=웹 요청 경로


#게시판 이미지 저장 경로
my.board.location=서버 컴퓨터 폴더 경로
my.board.webpath=웹 요청 경로



# 파일을 디스크에 쓸 때까지의 임계값
# 기본값: 0B
# 52,428,800 == 50MB
spring.servlet.multipart.file-size-threshold = 52428800

# 개별 파일당 최대 크기
# 기본값: 1MB
# 10,485,760 == 10MB
spring.servlet.multipart.max-file-size = 10485760

# HTTP 요청당 최대 크기
# 기본값: 10MB
# 52,428,800 == 50MB
spring.servlet.multipart.max-request-size = 52428800

# 파일의 임시 저장 경로(메모리 임계값 초과 시 임시 저장할 폴더)
spring.servlet.multipart.location=C:/workspace/project-resources/temp/

